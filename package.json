{
  "name": "learning-git-2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:html": "globstar nu-html-checker *.html",
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build": "npm-run-all build:* test",
    "build:docs": "mkdirp docs docs/css docs/js docs/images",
    "build:clean": "rimraf css/*",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build:img": "imagemin-newer images/ docs/images",
    "build:html-minifier": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --input-dir ./ --output-dir docs --file-ext html",
    "build:js-mini": "uglifyjs --compress js/*.js -o docs/js/",
    "build:css-mini": "postcss css/style.css > docs/css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "watch": "npm-run-all build -p watch:*",
    "watch:sass": "node-sass --output-style expanded --source-map true -o css sass --watch",
    "watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.css",
    "watch:server": "node_modules/.bin/browser-sync start --server --files css/*.css *.html",
    "watch:sassprefixer": "onchange -d 100 sass/* -- npm-run-all watch:sass watch:autoprefixer"
  },
  "keywords": [],
  "author": "Ola Podsiadlik",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.26.3",
    "cssnano": "^4.1.8",
    "globstar": "^1.0.0",
    "html-minifier": "^3.5.21",
    "imagemin-newer": "^1.0.2",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^5.1.0",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "rimraf": "^2.6.2"
  }
}
